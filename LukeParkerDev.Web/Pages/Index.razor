@page "/"

@inject IJSRuntime _js

<ParticlesContainer FileName="landing">
    <MudHidden Breakpoint="Breakpoint.SmAndDown">
        <div class="d-flex justify-end align-center">
            <MudCard Class="pa-4" Style="width: 50%" Elevation="4">
                <MudText Typo="Typo.h2" Color="Color.Default" Style="color: #fff">
                    <MudIcon Class="super-large mt-2 ml-2" Icon="@Icons.Filled.WavingHand" Size="Size.Large" Color="Color.Tertiary"/> Hi! I'm
                </MudText>
                <MudText Typo="Typo.h1" Color="Color.Info">
                    Luke Parker
                </MudText>
            </MudCard>
        </div>
    </MudHidden>
    <MudHidden Breakpoint="Breakpoint.SmAndDown" Invert>
        <div class="d-flex justify-center align-center">
            <MudCard Class="pa-4" Elevation="4">
                <MudText Typo="Typo.h2" Color="Color.Default" Style="color: #fff">
                    <MudIcon Class="super-large mt-2 ml-2" Icon="@Icons.Filled.WavingHand" Size="Size.Large" Color="Color.Tertiary"/> Hi! I'm
                </MudText>
                <MudText Typo="Typo.h1" Color="Color.Info">
                    Luke Parker
                </MudText>
            </MudCard>
        </div>
    </MudHidden>
    <div class="d-flex justify-center align-end pb-4 pr-4">
        <MudIconButton Icon="@Icons.Filled.ArrowDownward" Color="Color.Primary" Variant="Variant.Filled" OnClick="HandleScrollDownPage"/>
    </div>
</ParticlesContainer>

<MudDivider Class="ma-4"/>

<div style="width: 100%" class="pl-6 pr-6 mt-6 mb-6">
    <TempusHubCard />
    <UpBlazorCard />
    <UserGroupCard />
</div>

@code {

    private async Task HandleScrollDownPage()
    {
        await _js.InvokeVoidAsync("scrollDownFullPage");
    }

}
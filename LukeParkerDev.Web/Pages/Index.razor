@page "/"

@inject IJSRuntime _js

<ParticlesContainer FileName="landing">
    <div class="d-flex flex-column flex-grow-1">
        <div class="hello-wrapper d-flex align-center flex-grow-1 ">
            <MudCard Class="pa-4" Elevation="4">
                <MudText Typo="Typo.h2" Color="Color.Default" Style="color: #fff">
                    <MudIcon Class="super-large mt-2 ml-2" Icon="@Icons.Filled.WavingHand" Size="Size.Large" Color="Color.Tertiary"/> Hi!&nbsp;I'm
                </MudText>
                <MudText Typo="Typo.h1" Color="Color.Info" Class="d-flex flex-wrap">
                    <span class="flex-grow-1" style="width: min-content">
                        Luke Parker
                    </span>
                    <div class="pt-4">
                        <MudIconButton Class="super-large mr-4" Style="float: right" Variant="Variant.Filled" Color="Color.Secondary" Icon="@Icons.Custom.Brands.GitHub" Href="https://github.com/Hona" Size="Size.Large"/>
                    </div>
                </MudText>
            </MudCard>
        </div>
        
        <div class="d-flex justify-center align-end pb-4 pr-4">
            <MudIconButton Icon="@Icons.Filled.ArrowDownward" Color="Color.Primary" Variant="Variant.Filled" OnClick="HandleScrollDownPage"/>
        </div>
    </div>
</ParticlesContainer>

<MudDivider Class="ma-4"/>

<div style="width: 100%" class="pl-6 pr-6 mt-6 mb-6 pb-12">
    <TempusHubCard />
    <UpBlazorCard />
    <UserGroupCard />
</div>

@code {

    private async Task HandleScrollDownPage()
    {
        await _js.InvokeVoidAsync("scrollDownFullPage");
    }

}